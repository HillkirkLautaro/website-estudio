---
import BaseLayout from "../layouts/layout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

const imageModules = import.meta.glob<{ default: ImageMetadata }>("/src/assets/GaleriaEstudio/*.jpg", { eager: true });
const images = Object.values(imageModules).map((mod) => mod.default);
---

<BaseLayout title="Estudio | Alejandro Hillkirk" description="Galería de fotos del estudio jurídico físico en Zárate. Conocé nuestras instalaciones.">
  <section style="text-align: center; padding: 3rem 1rem 1.5rem;">
    <h1 class="page-title">Nuestro Estudio</h1>
    <p class="page-subtitle">Conocé el espacio donde brindamos atención personalizada.</p>
  </section>

  <section class="gallery">
    {images.map((image, index) => (
      <div class="gallery-item">
        <Image 
          src={image} 
          alt={`Foto del estudio ${index + 1}`}
          width={image.width}
          height={image.height}
          loading={index < 4 ? "eager" : "lazy"}
        />
      </div>
    ))}
  </section>

  <style>
    .page-title {
      color: #003366;
      font-size: 2.5rem;
      margin-bottom: 0.5rem;
    }

    .page-subtitle {
      font-size: 1.2rem;
      color: #333;
    }

    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      padding: 1rem 2rem 3rem;
      max-width: 1200px;
      margin: auto;
    }

    .gallery-item {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }

    .gallery-item:hover img {
      transform: scale(1.03);
    }

    /* ✅ Responsive */
    @media (max-width: 768px) {
      .page-title {
        font-size: 2rem;
      }

      .page-subtitle {
        font-size: 1rem;
      }

      .gallery {
        padding: 1rem;
        grid-template-columns: 1fr;
      }
    }

    @media (max-width: 480px) {
      .gallery {
        gap: 0.75rem;
      }

      .page-title {
        font-size: 1.75rem;
      }
    }
  </style>
</BaseLayout>

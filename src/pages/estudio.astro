---
import BaseLayout from "../layouts/layout.astro";
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
// Cargar imágenes desde la carpeta del estudio
const imageModules = import.meta.glob<{ default: ImageMetadata }>("/src/assets/GaleriaEstudio/*.jpg", { eager: true });
const images = Object.values(imageModules).map((mod) => mod.default);
---

<BaseLayout title="Estudio | Alejandro Hillkirk" description="Galería de fotos del estudio jurídico físico en Zárate. Conocé nuestras instalaciones.">
  <section style="text-align: center; padding: 3rem 1rem;">
    <h1 style="color: #003366; font-size: 2.5rem;">Nuestro Estudio</h1>
    <p style="font-size: 1.2rem;">Conocé el espacio donde brindamos atención personalizada.</p>
  </section>

  <section class="gallery">
    {images.map((image, index) => (
      <div class="gallery-item" key={index}>
        <Image 
          src={image} 
          alt={`Foto del estudio ${index + 1}`}
          width={image.width}
          height={image.height}
          loading={index < 4 ? "eager" : "lazy"}
        />
      </div>
    ))}
  </section>

  <style>
    .gallery {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1rem;
      padding: 1rem 2rem 3rem;
      max-width: 1200px;
      margin: auto;
    }

    .gallery-item {
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .gallery-item img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
      transition: transform 0.3s ease;
    }

    .gallery-item:hover img {
      transform: scale(1.03);
    }
  </style>
</BaseLayout>

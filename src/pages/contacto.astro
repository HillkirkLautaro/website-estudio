---
import BaseLayout from "../layouts/layout.astro";
---

<BaseLayout>
  <section class="contact-section">
    <h1 class="title">Contacto</h1>
    <p class="subtitle">
      Para consultas o asesoramiento legal, completá el siguiente formulario o contactanos por nuestras redes sociales y correo electrónico.
    </p>

    <form 
      action="https://formsubmit.co/alejandrohk@gmail.com" 
      method="POST" 
      class="contact-form"
    >
      <!-- Anti-spam y control -->
      <input type="hidden" name="_captcha" value="true" />
      <input type="hidden" name="_next" value="https://estudiowebsite.netlify.app/gracias/" />

      <label>
        Nombre
        <input type="text" name="nombre" required maxlength="100" class="form-input" />
      </label>

      <label>
        Email
        <input type="email" name="email" required maxlength="100" class="form-input" />
      </label>

      <label>
        Mensaje
        <textarea name="mensaje" rows="5" required maxlength="1000" class="form-input"></textarea>
      </label>

      <button type="submit" class="submit-button">
        Enviar
      </button>
    </form>

    <!-- Contacto rápido redes -->
    <section class="quick-contact">
      <h2 class="quick-contact-title">Contacto rápido</h2>

      <p>
        <strong>WhatsApp:</strong>
        <a href="https://wa.me/+5493487230611" target="_blank" rel="noopener" class="social-link whatsapp">+54 9 3487 23-0611</a>
      </p>

      <p>
        <strong>Instagram:</strong>
        <a href="https://www.instagram.com/alejandrohillkirk_abogado_/" target="_blank" rel="noopener" class="social-link instagram">@alejandrohillkirk_abogado_</a>
      </p>

      <p>
        <strong>Facebook:</strong>
        <a href="https://www.facebook.com/HillkirkAlejandro" target="_blank" rel="noopener" class="social-link facebook">Alejandro Hillkirk Abogado</a>
      </p>

      <p>
        <strong>Email:</strong>
        <a href="mailto:alejandrohk@gmail.com" class="social-link email">alejandrohk@gmail.com</a>
      </p>
    </section>
  </section>
</BaseLayout>

<style>
  .contact-section {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem; /* Añadimos padding para que el fondo se vea mejor */
    position: relative; /* Requerido para la marca de agua */
    isolation: isolate; /* Crea un nuevo contexto de apilamiento */
    background-color: #fff; /* Fondo blanco para que el contenido sea legible */
    border-radius: 8px; /* Bordes redondeados para un look más suave */
  }

  /* Marca de agua para la sección de contacto */
  .contact-section::before {
    content: '';
    position: absolute;
    inset: 0;
    z-index: -1;
    background-image: url('../assets/logo-estudio.png'); /* Ruta actualizada al PNG */
    background-repeat: no-repeat;
    background-position: center;
    background-size: contain;
    opacity: 0.05;
    border-radius: inherit; /* Hereda los bordes redondeados */
  }

  .title {
    color: #003366;
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .subtitle {
    font-size: 1.1rem;
    margin-bottom: 2rem;
  }

  /* --- Responsive Styles --- */
  @media (max-width: 768px) {
    .title {
      font-size: 2rem; /* Reducir tamaño para móviles */
    }

    .contact-section {
      padding: 1rem; /* Menos padding en móviles */
    }
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .form-input {
    width: 100%;
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box; /* Asegura que el padding no afecte el ancho total */
  }

  .submit-button {
    background-color: #007BFF;
    color: white;
    padding: 0.75rem;
    border: none;
    border-radius: 6px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .submit-button:hover {
    background-color: #0056b3;
  }

  .quick-contact {
    margin-top: 2.5rem;
    text-align: center;
  }

  .quick-contact-title {
    color: #003366;
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }

  .social-link {
    text-decoration: none;
    font-weight: 500;
  }

  .social-link:hover {
    text-decoration: underline;
  }

  .social-link.whatsapp {
    color: #25D366;
  }

  .social-link.instagram {
    color: #E1306C;
  }

  .social-link.facebook {
    color: #1877F2;
  }

  .social-link.email {
    color: #003366;
  }
</style>

import BaseLayout from "../layouts/layout.astro";
---

<BaseLayout>
  <section style="max-width: 600px; margin: 2rem auto; padding: 0 1rem;">
    <h1 style="color: #003366; font-size: 2.5rem; margin-bottom: 1rem;">Contacto</h1>
    <p style="font-size: 1.1rem; margin-bottom: 2rem;">
      Para consultas o asesoramiento legal, completá el siguiente formulario o contactanos por nuestras redes sociales y correo electrónico.
    </p>

    <form 
  action="https://formsubmit.co/alejandrohk@gmail.com" 
  method="POST" 
  style="display: flex; flex-direction: column; gap: 1rem;"
  />
  <!-- Anti-spam y control -->
  <input type="hidden" name="_captcha" value="false">
  <input type="hidden" name="_next" value="http://localhost:4321/gracias">

  <!-- Formulario original -->
  <label>
    Nombre
    <input type="text" name="nombre" required maxlength="100" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
  </label>

  <label>
    Email
    <input type="email" name="email" required maxlength="100" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;" />
  </label>

  <label>
    Mensaje
    <textarea name="mensaje" rows="5" required maxlength="1000" style="width: 100%; padding: 0.5rem; border: 1px solid #ccc; border-radius: 4px;"></textarea>
  </label>

  <button type="submit" style="background-color: #007BFF; color: white; padding: 0.75rem; border: none; border-radius: 6px; font-weight: bold; cursor: pointer;">
    Enviar
  </button>
</form>
